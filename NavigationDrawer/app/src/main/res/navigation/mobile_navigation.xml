<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.navigationdrawer.ui.home.HomeFragment"
        android:label="Card Manager"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_my_cards"
        android:name="com.example.navigationdrawer.ui.cards.CardsFragment"
        android:label="@string/my_cards"
        tools:layout="@layout/fragment_cards" />

    <fragment
        android:id="@+id/nav_statement"
        android:name="com.example.navigationdrawer.ui.statement.StatementFragment"
        android:label="Extrato"
        tools:layout="@layout/fragment_statement" />

    <fragment
        android:id="@+id/nav_schedule"
        android:name="com.example.navigationdrawer.ui.schedule.ScheduleFragment"
        android:label="Agendamentos Pendentes"
        tools:layout="@layout/fragment_schedule" />

    <fragment
        android:id="@+id/nav_about"
        android:name="com.example.navigationdrawer.ui.about.AboutFragment"
        android:label="Sobre"
        tools:layout="@layout/fragment_about" />
</navigation>